<Window x:Class="ProjectGeavanceerde_WPF.Views.ArcEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectGeavanceerde_WPF.Views"
        mc:Ignorable="d"
        x:Name="ArcEditWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ArcEditView" Height="750" Width="800">
    <Grid Margin="0,0,2,1" Background="LightSeaGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
        </Grid.RowDefinitions>
        <TextBox Text="{Binding SelectedArc.Name, ValidatesOnDataErrors=True}"
                   materialDesign:HintAssist.Hint="Naam"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                   Grid.Row="0" Grid.Column="0"  />
        <TextBox Text="{Binding SelectedArc.Startingchapter, ValidatesOnDataErrors=True}"
                   materialDesign:HintAssist.Hint="Starting Chapter"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                   Grid.Row="1" Grid.Column="0"  />
        <TextBox Text="{Binding SelectedArc.Endingchapter, ValidatesOnDataErrors=True}"
                   materialDesign:HintAssist.Hint="Ending Chapter"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                   Grid.Row="2" Grid.Column="0"  />

        <Button  Content="Arc Bewerken" Background="#00b4d8" Grid.Row="9" BorderBrush="Black" FontSize="30" BorderThickness="3" Margin="5" Command="{Binding CloseWindowCommandArcEdit, Mode=OneWay}"  CommandParameter="{Binding ElementName=ArcEditWindow}" Height="Auto"/>
    </Grid>
</Window>
