<Window x:Class="ProjectGeavanceerde_WPF.Views.AffAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectGeavanceerde_WPF.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Name="AffAddWindow"
        Title="AffAddView" Height="750" Width="800">
    <Grid Margin="0,0,2,-1" Background="LightSeaGreen" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Name, ValidatesOnDataErrors=True}"
                 materialDesign:HintAssist.Hint="Naam"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Grid.Row="0" Grid.Column="1"/>
        <ComboBox ItemsSource="{Binding Factions, ValidatesOnDataErrors=True}"
                  SelectedValue="{Binding FactionID, ValidatesOnDataErrors=True}" 
                  SelectedValuePath="FactionID"
                  materialDesign:HintAssist.Hint="Faction"
                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                  Grid.Row="1" Height="50"  Grid.Column="1" Margin="0,10"/>
        <Label Content="{Binding Foutmelding}" Grid.Row="6" Grid.Column="1" Background="Aquamarine" FontSize="30" Margin="10,10,10,0"></Label>
        <Button  Content="Affiliation Aanmaken" Background="#00b4d8" Grid.Column="1" Grid.Row="7" FontSize="30" BorderBrush="Black" BorderThickness="3" Margin="5" Command="{Binding CloseWindowCommandAffAdd, Mode=OneWay}"  CommandParameter="{Binding ElementName=AffAddWindow}" Height="Auto"/>
        <Button  Content="Terug naar Affiliations" Background="#00b4d8" Grid.Column="1" Grid.Row="8" FontSize="30" BorderBrush="Black" BorderThickness="3" Margin="5" Command="{Binding CloseWindowCommandAffAddBack, Mode=OneWay}"  CommandParameter="{Binding ElementName=AffAddWindow}" Height="Auto"/>

    </Grid>
</Window>